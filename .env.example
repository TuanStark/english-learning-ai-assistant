# =============================================================================
# Environment Configuration Template for Real Estate AI Agent
# =============================================================================

# Application Environment
NODE_ENV=production
PORT=3000
APP_IP=10.0.14.20

# =============================================================================
# OpenAI Configuration (REQUIRED)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# =============================================================================
# MCP Server Configuration (REQUIRED)
# =============================================================================
# For development (local MCP server)
MCP_SERVER_PATH=./mcp-servers/hasura-advanced.js
MCP_SERVER_PATH_AGENT=/path/to/your/mcp-server.ts

# For production (HTTP MCP server)
MCP_SERVER_URL=https://pho-mcp-server.crbgroup.live/mcp
MCP_TIMEOUT=30000

# =============================================================================
# Database Configuration (REQUIRED for MCP)
# =============================================================================
HASURA_ENDPOINT=https://your-hasura-endpoint.com/v1/graphql
HASURA_ADMIN_SECRET=your_hasura_admin_secret

# =============================================================================
# Redis Configuration (Optional)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_QUERIES_PER_SESSION=30

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info

# =============================================================================
# CORS Configuration
# =============================================================================
CORS_ORIGIN=http://localhost:3001

# =============================================================================
# Cache Configuration
# =============================================================================
CACHE_TTL=1800
CACHE_MAX_ITEMS=1000

# =============================================================================
# Docker Compose Network (if using custom network)
# =============================================================================
# APP_IP=10.0.14.20
